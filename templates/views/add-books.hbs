<!DOCTYPE html>
<html lang="en">


<!-- add-doctor24:06-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/library.jpg">
    <title>Noble Library</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        {{>header}}
        {{>sidebar}}
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Add Books</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form action="/add-books" method="POST">
                            {{#each errors}}
                            <div class="alert alert-danger">
                              <a href="#" class ="close" data-dismiss="alert" aria-label="close">&times;</a>
                              {{text}}    
                            </div>
                            {{/each}}
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <!-- <input type="text" name ="nickName"class="form-control" id="floatingInput" placeholder=" nick Name "> -->
                                        <label>Title<span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name ="title" value="{{title}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
                                        <label>Author<span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name = "author" value="{{author}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Excerpt <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name ="excerpt" value="{{excerpt}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>ISBN<span class="text-danger">*</span> </label>
                                        <input class="form-control" type="text" name = "ISBN" value="{{ISBN}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group"> 
                                       <label>Category <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name = "category" value="{{category}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group"> 
                                       <label>Book Number<span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name = "bookNumber" value="{{bookNumber}}">
                                    </div>
                                </div>
                               
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Price <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name = "price" value="{{price}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
                                        <label>Released At</label>
                                        <div class="cal-icon">
                                            <input type="text" class="form-control datetimepicker" name ="releasedAt" value="{{releasedAt}}" required>
                                        </div>
                                </div>
                                
                            </div>
                           
                            <div class="m-t-20 text-center" >
                                <button class="btn btn-primary account-btn" type="submit">Store Book</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="js/jquery-3.2.1.min.js"></script>
	<script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.slimscroll.js"></script>
    <script src="js/select2.min.js"></script>
	<script src="js/moment.min.js"></script>
	<script src="js/bootstrap-datetimepicker.min.js"></script>
    <script src="js/app.js"></script>
</body>


<!-- add-doctor24:06-->
</html>
