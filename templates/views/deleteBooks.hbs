<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="img/library.jpg">
    <title>Noble Library</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    {{>header}}
    {{>sidebar}}
    <div class="main-wrapper account-wrapper">
        <div class="account-page">
			<div class="account-center">
				<div class="account-box">
                    <form action="/deleteBooks" class="form-signin" method="POST">
						{{!-- <div class="account-logo">
                            <a href="index.hbs"><img src="img/library.jpg" alt=""></a>
                        </div> --}}
                         {{#each errors}}
                        <div class="alert alert-danger" id="alert" role="alert">
                             <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            {{text}}
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <label>Book Number</label>
                            <input type="text" autofocus="" class="form-control" name="bookNumber" value="{{bookNumber}}" required>
                        </div>
                        <div class="form-group checkbox">
                            <label>
                                <input type="checkbox" required> Are you sure you want to delete this book
                            </label>
                        </div>
                        
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary account-btn">Delete</button>
                        </div>
                        
                    </form>
                </div>
			</div>
        </div>
    </div>
    <script src="js/jquery-3.2.1.min.js"></script>
	<script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/app.js"></script>
</body>


<!-- login23:12-->
</html>